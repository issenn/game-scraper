# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4
tab_width = 8
end_of_line = lf

[*.{yml,yaml}]
indent_style = space
indent_size = 2

# MacOSX: Icon must end with two \r
[.gitignore]
end_of_line = unset
trim_trailing_whitespace = false
insert_final_newline = true
